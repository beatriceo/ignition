<div class="profile-container">
  <%= simple_form_for(@user) do |t| %>
    <%= t.input :email  %>
    <%= t.input :username %>
    <%= t.input :first_name %>
    <%= t.input :last_name %>
    <%= t.input :password %>
    <%= t.text_area :description, class: "description" %>

    <%= t.submit :Save, class: "btn btn-primary save-btn form-control" %>

  <% end %>
  <div class="profile-pic">
    <%= image_tag "https://avatars2.githubusercontent.com/u/40055789?v=4" %>
    <%= link_to "Upload a new photo", "#" %>
  </div>
</div>

