<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'auto.jpg' %>');">
  <div class="banner-content">
    <h1>La Voiture</h1>
    <p>Choose,Book,Drive!</p>
    <%= link_to "View cars", root_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>



<div class="listings-container">
  <div class="flex-row">
    <div class="center-cards">
      <% @listings.each do |listing| %>
        <%= link_to listing_home_path(listing), class: "card-link" do %>
          <%= render "layouts/card", listing: listing %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


<% unless current_user.nil? %>
  <%= link_to 'Make a new car', listing_new_path(current_user), class: "btn btn-primary"  %>
<% end %>
